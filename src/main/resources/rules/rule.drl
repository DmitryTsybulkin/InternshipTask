package rules

import com.pany.adv.advtask.domain.Request
import com.pany.adv.advtask.service.RequestService
import java.util.Date

rule "Creating new Request"

    dialect "java"

    when
        $newRequest : Request()
    then
        $newRequest.setStatus("Sent to confirm");
        $newRequest.setDate(new Date());
     end